			<bean class="com.demo.my.user.interceptor.PermissionInterceptor"> 
				<property name="uncheckUrls"> 
                	<list> 
                     	<value>/upload/doImgUpload</value> 
                 	</list> 
               </property> 
			</bean> 
		</mvc:interceptor>
	</mvc:interceptors>  -->
	
	<!-- open aop -->
	<aop:aspectj-autoproxy /> 
	
	<bean id="SpringContextUtil" class="com.demo.my.base.util.SpringContextUtil" lazy-init="false"/>

	<!-- 加上以下代码 shiroFilter会把httpServletRequest包装成ShiroHttpServletRequest -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
	    <property name="maxUploadSize" value="20000000"/>
	</bean> 
	<!-- <bean id="multipartResolver" class="com.demo.my.user.interceptor.MyCommonsMultiparResolver">
	    <property name="maxUploadSize" value="20000000"/>
	</bean> -->

	<import resource="redis-config.xml"/>
	<import resource="data-sources.xml"/>
	<!-- <import resource="activemq-config.xml"/> -->
	<import resource="classpath:quartz.xml"/>
</beans>  